{
  "compilerOptions": {
    "strictNullChecks": false,
    "noUncheckedIndexedAccess": true
  },
  "typeRoots": [ // Specifies a list of directories for type definitions
    "./node_modules/@types",
    "./.types"
  ],
  "extends": "expo/tsconfig.base",
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/types",
    "apps/next/out",
    "apps/next/.next",
    "apps/next/.tamagui"
  ]
}